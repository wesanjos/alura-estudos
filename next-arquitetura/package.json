    "utils": "yarn workspace @alura-estudo/utils",
    "test:utils": "yarn utils test"
  },
  "dependencies": {
    "eslint": "8.38.0",
    "prettier": "2.8.7",
    "@types/styled-components": "^5.1.26",
    "@types/node": "18.15.11",
    "@types/react": "18.0.35",
    "typescript": "5.0.4"
